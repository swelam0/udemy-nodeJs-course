<div class="table-responsive">
  <table
    class="table table-bordered"
    id="dataTable"
    width="100%"
    cellspacing="0"
  >
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Status</th>
        <th>Allow Comments</th>
        <th>Buttons</th>
      </tr>
    </thead>
    <tbody>
      {{#each posts}}
      <tr>
        <td>{{_id}}</td>
        <td>{{title}}</td>
        <td>{{status}}</td>
        <td>{{allowComments}}</td>
        <td>
          <a href="/admin/posts/edit/{{_id}}" class="btn btn-primary">Edit</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>